{
  "baseDir": "./tmp/public",
  "src": "./_assets",
  "dest": "./tmp/public",
  "dist": "./tmp/public/_assets",

	"browserSync": {
		"server": {
			"baseDir": "tmp/public",
      "index": "index.html"
		}
	},

  "html": {
    "src": "html/nunjucks",
    "dest": "./"
  },


  "static": {
    "src": "static",
    "dest": "./"
  },

  "js": {
    "src": "js",
    "dest": "_assets/js/libs",
		"libs": [
			"./_assets/js/libs/modernizr.min.js"
		]
  },

	"pug": {
		"src": "html/pug",
		"dest": "./"
	},

	"es5": {
		"src": [
			"./_assets/js/libs/jquery-1.11.3.min.js",
			"./_assets/js/libs/underscore-min.js",
			"./_assets/js/plugins/*.js",
			"./_assets/js/application.js",
			"./_assets/js/tools.js",
			"./_assets/js/behaviours/*.js"
		],
		"dest": "_assets/js"
	},

  "json": {
    "src": "js/json",
    "dest": "./"
  },

  "scss": {
    "src": "scss",
    "dest": "_assets/css"
  },

  "cssFonts": {
    "src": "scss",
    "dest": "_assets/css"
  },

  "images": {
    "src": "images/site",
    "dest": "_assets/images"
  },

  "fonts": {
    "src": "fonts",
    "dest": "_assets/fonts"
  },

  "symbols": {
    "src": "images/svg-symbols",
    "dest": "_assets/images",
    "fileName": "symbols.pug",
    "fileDest": "html/pug/_includes"
  },

  "iconFont": {
    "src": "images/icons",
    "dest": "_assets/fonts"
  },



	"sprites": {
    "src": "images/svg-sprites",
    "dest": "_assets/images"
	},

  "pngs": {
    "src": "images/png-sprites",
    "dest": "_assets/images"
  },

  "svgs": {
    "src": "images/svg-assets",
    "dest": "_assets/images"
  },

  "favicons": {
    "src": "favicons",
    "dest": "./"
  },

  "tags": {
    "src": "./tmp/public/*.html",
    "dest": "./tmp/public/",
    "css": "/_assets/css/",
    "js": "/_assets/js/"
  }
}
