{% extends "layout/wrapper.njk" %}

{% block title %}{{ title }} | Home page{% endblock %}
{% block bodyClass %}has-hero{% endblock %}

{% block content %}
	<div class="c-slide" data-behaviour="SlideShow">
		<div class="c-posts__list">
			<ul class="c-slide__wrapper">
				{% for image in slides %}
					<li class="c-slide__item">
						<img src="{{ image }}" class="c-slide__img">
					</li>
				{% endfor %}
			</ul>
		</div>
	</div>



	<div data-behaviour="Accordion">
		<div>
			{% for content in accordions %}
				<div>
					<button data-accordion-btn data-target="#_{{ loop.index }}">{{ content.title }}</button>
					<div id="_{{ loop.index }}" class="c-accordion__wrapper">
						{{ content.body }}
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}


{% block extra %}
{% endblock %}
