{% extends "layout/wrapper.njk" %}

{% block title %}{{ title }} | Home page{% endblock %}
{% block bodyClass %}has-hero{% endblock %}

{% block content %}
<div data-behaviour="ModalSteps">
	<div>
		<a data-modal-screen data-modal-screens='["#modal-1", "#modal-2"]'>Modal 1</a>
	</div>
	<div>
		<a data-modal-screen data-modal-screens='["#modal-3"]'>Modal 2</a>
	</div>
	<div>
		<a data-modal-screen data-modal-screens='["#modal-1", "#modal-2", "#modal-3", "#modal-4"]'>Modal 3</a>
	</div>
	<div>
		<a data-modal-screen data-modal-screens='["#modal-3"]'>Modal 4</a>
	</div>
	<div>
		<a data-modal-screen data-modal-screens='["#modal-1", "#modal-2"]'>Modal 5</a>
	</div>
	<div>
		<a data-modal-screen data-modal-screens='["#modal-3"]'>Modal 6</a>
	</div>
</div>

	<div class="modal">
		<div class="modal-inner">
			<a data-modal-close>Close</a>
			<div class="modal-content"></div>
			<a data-modal-prev>Prev</a>
			<a data-modal-next>Next</a>
		</div>
	</div>

	<div id="modal-1" class="modal-hider">Modal 1 content</div>
	<div id="modal-2" class="modal-hider"><img src="/dist/images/demo_img_1.jpg" /></div>
